<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AvatarView">
        <attr name="avvy_distance_to_border" format="dimension" />
        <attr name="avvy_border_thickness" format="dimension" />
        <attr name="avvy_border_thickness_highlight" format="dimension" />

        <attr name="avvy_loading_arches" format="integer" />
        <attr name="avvy_loading_arches_degree_area" format="float" />
        <attr name="avvy_loading_arc_degree_length" format="float" />

        <attr name="avvy_border_color" format="color" />
        <attr name="avvy_border_color_end" format="color" />
        <attr name="avvy_border_highlight_color" format="color" />
        <attr name="avvy_border_highlight_color_end" format="color" />
        <attr name="avvy_middle_color" format="color" />

        <attr name="avvy_circle_background_color" format="color" />

        <attr name="avvy_highlighted" format="boolean" />

        <attr name="avvy_text" format="string"/>
        <attr name="avvy_text_size" format="dimension"/>
        <attr name="avvy_text_color" format="color"/>

        <attr name="avvy_show_badge" format="boolean" />
        <attr name="avvy_badge_color" format="color" />
        <attr name="avvy_badge_stroke_color" format="color" />
        <attr name="avvy_badge_stroke_width" format="dimension" />
        <attr name="avvy_badge_radius" format="dimension" />
        <attr name="avvy_badge_position" format="enum" >
            <enum name="BOTTOM_RIGHT" value="0"/>
            <enum name="BOTTOM_LEFT" value="1"/>
            <enum name="TOP_RIGHT" value="2"/>
            <enum name="TOP_LEFT" value="3"/>
        </attr>
    </declare-styleable>
</resources>